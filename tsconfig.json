{
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__test__/*"
  ],
  "compilerOptions": {
    "lib": ["ESNext"],
    
    "outDir": "./dist",
    "rootDir": "./src",

    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
